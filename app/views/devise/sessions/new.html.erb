<div class="container login">
  <div class="form-devise">

    <div class="title-log-in text-center">
    <h2>Se connecter</h2>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password, label: 'Mot de passe',
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable?%>
      </div>

      <div class="user-forms-buttons d-flex align-items-center">
        <div class="form-actions mx-3">
          <%= f.button :submit, "Se connecter", class: "btn-login" %>
        </div>
        <%= render "devise/shared/links" %>
      </div>

    <% end %>


  </div>
</div>

<div class="portfolio-container">


  <div class="top-cards mb-5">
    <%= render "shared/my_portfolio" %>
    <%= render "shared/my_balance" %>
  </div>

  <div class="container mb-5">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Bids</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Asks</a>
      </li>
    </ul>

    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <%= render 'shared/my_bids' %>
      </div>
      <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <%= render 'shared/my_asks' %>
      </div>
    </div>
  </div>

  <div class="container mb-5 text-center">
    <h2 class="subtitle">MES NFTs</h2>
    <p class="paragraphe-subtitle">Retrouvez l'intégralité de vos Nfts dans cette section</p>
      <div class="my-nfts">
        <%= render 'shared/my_nfts' %>
      </div>
  </div>

</div>
